
@{
    ViewBag.Title = "Add New Class";
}

@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="myriad-pro-font tab">Add New Class</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal col-sm-4 tab" method="post" action="#">
            <br />
            <div class="form-group">
                <label for="classname" class="myriad-pro-font">Class Name</label>
                <input class="form-control myriad-pro-font" placeholder="Class Name" name="classname" type="text" />
            </div>
            <button class="btn btn-default myriad-pro-font" type="submit">Add Class</button>
        </form>

    </div>
</div>