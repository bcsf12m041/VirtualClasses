@{
    ViewBag.Title = "Index - Virtual Classes";
}

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div id="homepageslide" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#homepageslide" data-slide-to="0" class="active"></li>
        <li data-target="#homepageslide" data-slide-to="1"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="less-opacity" src="~/Images/jumbo1.jpg" alt="Slide 1" />
            <div class="carousel-caption">
                <h3 class="black myriad-pro-font">Change your Learning Style</h3>
                <p class="black myriad-pro-font">Create virtual classes, conduct quizzes, take assignments.</p>
            </div>
        </div>
        <div class="item">
            <img class="less-opacity" src="~/Images/jumbo.jpg" alt="Slide 1" />
            <div class="carousel-caption">
                <h3 class="black myriad-pro-font">All you need to do is <a href="/Home/SignUp">Sign Up</a></h3>
                <p class="black myriad-pro-font">And start taking your virtual class</p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#homepageslide" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#homepageslide" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container">
    <hr />
    <br /><br />
    <h3 class="heading myriad-pro-font">All you need to do is <a href="/Home/SignUp">Sign Up</a> and take your Virtual Class.</h3>

    <div class="row">
        <div class="col-sm-4">
            <h3 class="heading-bold myriad-pro-font"><span class="glyphicon glyphicon-list-alt"></span> Conduct Quizzes</h3>
            <ul class="myriad-pro-font center">
                <li>Instructors, conduct online quizzes</li>
                <li>Instant Checking</li>
                <li>View Results</li>
            </ul>
        </div>
        <div class="col-sm-4">
            <h3 class="heading-bold myriad-pro-font"><span class="glyphicon glyphicon-book"></span> Take Assignments</h3>
            <ul class="myriad-pro-font center">
                <li>Give students assignments</li>
                <li>View their solutions online</li>
            </ul>
        </div>
        <div class="col-sm-4">
            <h3 class="heading-bold myriad-pro-font"><span class="glyphicon glyphicon-comment"></span> Start Discussions</h3>
            <ul class="myriad-pro-font center">
                <li>Ask your instructors questions</li>
                <li>Answer your fellow's questions</li>
            </ul>
        </div>
    </div>
    <hr />
    <br />
    <div class="row">
        <h3 class="heading myriad-pro-font black">What are you waiting for?</h3>
        <br />
        <div class="center"><button type="button" onclick="location.href='/Home/SignUp'" class="btn btn-default">Start your Virtual Class Now!</button></div>
        <br />
    </div>
</div>
