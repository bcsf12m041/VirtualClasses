@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="heading myriad-pro-font">Login</h1>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" action="/Home/LoginReq">
                    <div class="inner-addon left-addon text-input align-input">
                        <i class="glyphicon glyphicon-user"></i>
                        <input type="text" name="user" placeholder="Username" class="form-control" />
                    </div>

                    <div class="inner-addon left-addon text-input align-input">
                        <i class="glyphicon glyphicon-lock"></i>
                        <input type="password" name="pass" placeholder="Password" class="form-control" />
                    </div>
                    <div class="align-input right">
                        <a class="myriad-pro-font" href="/Home/ForgotPassword">Forgot your password?</a>
                    </div>

                    <div class="center">
                        <button type="submit" class="btn btn-primary btn-lg align-input">Login</button>
                    </div>

                    <div class="align-input right">
                        <p class="myriad-pro-font">Don't have an account?<a href="/Home/SignUp"> Sign up here.</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
    </div>

</div>